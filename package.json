{
  "name": "clean-code-tips",
  "displayName": "Clean Code Tips",
  "description": "Displays a clean code tip each time you open VSCode to help us all become better engineers!",
  "publisher": "chriswingler",
  "version": "1.7.0",
  "engines": {
    "vscode": "^1.39.0"
  },
  "categories": [
    "Other"
  ],
  "repository": {
    "url": "https://github.com/chriswingler/clean-code-tips"
  },
  "icon": "images/logo.png",
  "activationEvents": [
    "*"
  ],
  "main": "./out/src/extension.js",
  "contributes": {
    "configuration": [
      {
        "title": "Clean Code Tips",
        "properties": {
          "tipTimer": {
            "type": "string",
            "enum": [
              "5 minutes",
              "10 minutes",
              "15 minutes",
              "30 minutes",
              "1 hour",
              "2 hours",
              "4 hours",
              "8 hours",
              "1 day",
              "1 week",
              "1 month"
            ],
            "default": "2 hours",
            "description": "Time between tips while window open",
            "scope": "application"
          },
          "displayTipAtStartup": {
            "type": "boolean",
            "default": true,
            "scope": "application"
          }
        }
      }
    ]
  },
  "keywords": [
    "javascript",
    "linters",
    "typescript",
    "clean code",
    "engineering",
    "education",
    "programming"
  ],
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js --color",
    "lint": "gts lint",
    "clean": "gts clean",
    "fix": "gts fix",
    "prepare": "npm run compile",
    "posttest": "npm run lint"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.0",
    "@types/node": "^14.14.22",
    "@types/vscode": "^1.52.0",
    "glob": "^7.1.6",
    "mocha": "^8.2.1",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0",
    "gts": "^3.1.0"
  }
}
